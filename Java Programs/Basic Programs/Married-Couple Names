//Allows us to get user inputs
import java.util.Scanner;

//Creates the function MarriedNames and main
public class MarriedNames {
    public static void main (String [] args) {
        //Sets up a scanner for user inputs
        Scanner scnr = new Scanner(System.in);
        //Declares the following variables as strings
        String firstName1;
        String lastName1;
        String firstName2;
        String lastName2;

        //Asks the user for inputs for the first person's first & last name.
        System.out.println("What is the first person's first name?");
        firstName1 = scnr.nextLine();
        System.out.println("What is the first person's last name?");
        lastName1 = scnr.nextLine();

        //Asks the user for inputs for the second person's first & last name.
        System.out.println("What is the second person's first name?");
        firstName2 = scnr.nextLine();
        System.out.println("What is the second person's last name?");
        lastName2 = scnr.nextLine();

        //Prints married-couple names based off the formulas below
        System.out.println("Here are some common married-couple names:");
        System.out.println(firstName1 + " " + lastName1 + " and " + firstName2 + " " + lastName2);
        System.out.println(firstName1 + " " + firstName2 + " " + lastName1);
        System.out.println(firstName1 + " " + firstName2 + " " + lastName2);
        System.out.println(firstName1 + " " + firstName2 + " " + lastName1 + "-" + lastName2);
        System.out.println(firstName1 + " " + firstName2 + " " + lastName2 + "-" + lastName1);
    }
}