#include <iostream>
using namespace std;

int main()
{
    int x = 1;
    float number;
    float total = 0;

    while(x <= 5){
        cout << "Enter a number... ";
        cin >> number;
        total += number;
        x++;
    }
    cout << "Your final total is: " << total << endl;

    float average = total / 5;
    cout << "The average of your numbers is: " << average << endl;
    return 0;
}
